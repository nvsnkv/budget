{
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Error",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext" ],
    "Destructure": [
      { "Name": "ToMaximumDepth", "Args": { "maximumDestructuringDepth": 4 } },
      { "Name": "ToMaximumStringLength", "Args": { "maximumStringLength": 100 } },
      { "Name": "ToMaximumCollectionCount", "Args": { "maximumCollectionCount": 10 } }
    ]
  },

  "ConnectionStrings": {
    "BudgetContext": ""
  },

  "OutputOptions": {
    "ShowSuccesses": false
  },

  "Transfers": {
    "Instant transfer": {
      "Accuracy": "Exact", "Criterion": "l.Amount.IsNegative() && r.Amount.IsPositive() && l.Amount.Abs() == r.Amount.Abs() && l.Description == r.Description && l.Attributes[\"Account\"] != r.Attributes[\"Account\"] && (l.Timestamp - r.Timestamp).Duration() < TimeSpan.FromMinutes(2)"
    }

  },

  "Tags": {
    "income":  ["o.Amount.Amount > 0"],
    "expense":  ["o.Amount.Amount < 0"],
    "${o.Attributes[\"Category\"].ToString()}": ["o.Attributes.ContainsKey(\"Category\")"]
  }
}
